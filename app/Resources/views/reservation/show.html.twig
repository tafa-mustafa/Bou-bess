{% extends '@biblio/admin.html.twig' %}
{% block body %}
   <fieldset class="cadre" style="margin-top:40px;" >

    

    <table class="table" style="margin-left:28%; width:75%;">
        <thead class="thead-dark">
        <h1>Reservations list</h1>
            <tr>
                <td>Id</td>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if reservation.date %}{{ reservation.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    <div class="btn-group">
   
            <a href="{{ path('reservation_index') }}"class="btn btn-success">Back to the list</a>
            <a href="{{ path('reservation_edit', { 'id': reservation.id }) }}" class="btn btn-warning">Edit</a>
    </div>
</fieldset>
<fieldset class="cadre" style"margin-left:28%">

            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-warning">
            {{ form_end(delete_form) }}

    </fieldset>
{% endblock %}
